{
  "name": "V2ray",
  "description": "deploy V2ray to Heroku.",
  "keywords": ["V2ray"],
  "env": {
    "VER": {
       "description": "输入v2ray Core 版本号（latest表示最新版本）",
       "value": "latest"
     }, 
    "UUID": {
       "description": "Vmess协议默认UUID，请输入自己的UUID",
       "value": "8fd6dadc-0d59-4ae7-93bb-e6b8a231c2c2"
     },
    "V2RAY_RAY_BUFFER_SIZE": {
       "description": "每个连接的缓存大小，单位MB",
       "value": "10"
     },
    "CONFIG_JSON1": {
            "description": "不熟悉v2ray的默认即可",
            "value": "{\"log\":{\"access\":\"\",\"error\":\"\",\"loglevel\":\"warning\"},\"inbound\":{\"protocol\":\"vmess\",\"port\":"
        },
        "CONFIG_JSON2": {
            "description": "拼接config.json,默认即可",
            "value": ",\"settings\":{\"clients\":[{\"id\":\""
        },
       
        "CONFIG_JSON3": {
            "description": "拼接config.json,默认即可",
            "value": "\",\"alterId\":64}]},\"streamSettings\":{\"network\":\"ws\"}},\"inboundDetour\":[],\"outbound\":{\"protocol\":\"freedom\",\"settings\":{}}}"
        }
  },
  "website": "https://github.com/wangyi2005/v2ray-heroku",
  "repository": "https://github.com/wangyi2005/v2ray-heroku",
  "stack": "container"
 }

    
